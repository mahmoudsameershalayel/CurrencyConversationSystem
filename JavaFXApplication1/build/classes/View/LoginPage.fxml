<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginPageController">
   <children>
      <VBox alignment="CENTER" layoutX="53.0" layoutY="151.0" prefHeight="273.0" prefWidth="195.0" style="-fx-spacing: 10; -fx-padding: 15;">
         <children>
            <Label fx:id="wrongLogin" textFill="RED">
               <font>
                  <Font size="11.0" />
               </font></Label>
            <Label text="username">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="usernameFieldId" promptText="Username" style="-fx-border-color: blue;" />
            <Label text="password">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordFieldId" promptText="password" style="-fx-border-color: blue;" />
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#handleLoginBtn" prefHeight="30.0" prefWidth="67.0" style="-fx-background-color: blue;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
         </children>
      </VBox>
      <ImageView fitHeight="121.0" fitWidth="246.0" layoutX="27.0" layoutY="76.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/login.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
